<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lwc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.umengshared.lwc.myumengshared.activity.definedview.CircleView
            android:id="@+id/iv_circleview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            lwc:circle_backgroud_color="@color/cxc_blue" />

        <com.umengshared.lwc.myumengshared.activity.definedview.QQstepView
            android:id="@+id/step_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            lwc:borderWidth="6dp"
            lwc:innerColor="@color/red"
            lwc:outerColor="@color/colorPrimary"
            lwc:stepTextColor="@color/red"
            lwc:stepTextSize="30sp" />

        <com.umengshared.lwc.myumengshared.activity.definedview.ChangeTextView
            android:id="@+id/tv_changertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello world"
            lwc:changerColor="@color/red"
            lwc:originColor="@color/colorPrimary" />
        <Button
            android:id="@+id/bt_left_to_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="left" />
        <Button
            android:id="@+id/bt_rigth_to_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="right" />

        <!--<com.umengshared.lwc.myumengshared.activity.definedview.MyTextViewTest
            lwc:my_text_test="text practices"
            lwc:text_color_test="@color/colorPrimary"
            lwc:text_size_test="18sp"
            lwc:backgrouds="@color/cadetblue"
            lwc:maxLength="100"
            android:layout_width="90dp"
            android:layout_height="90dp"
            />-->

        <TextView
            android:id="@+id/tv_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动态请求app权限" />

        <Button
            android:id="@+id/bt_start_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启动前台服务" />

        <Button
            android:id="@+id/bt_stop_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止前台服务" />

        <Button
            android:id="@+id/bt_intent_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="intentservice服务" />

        <Button
            android:id="@+id/bt_start_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始下载" />

        <Button
            android:id="@+id/bt_stop_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暂停" />

        <Button
            android:id="@+id/bt_cancel_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消" />

        <Button
            android:id="@+id/bt_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="强制线下" />
    </LinearLayout>
</ScrollView>